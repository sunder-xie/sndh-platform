</delete>
  <select id="findNoUsedRefuseResend" resultMap="BaseResultMap" parameterType="String">
    SELECT
        rs.MATNR,
        SUM(rs.REMAIN_QTY) QTY
    FROM
        t_mst_refuse_resend rs
    WHERE
        rs.REMAIN_QTY > 0
    AND rs.BRANCH_NO = #{branchNo,jdbcType=VARCHAR}
    GROUP BY
        rs.MATNR
  </select>


  <select id="queryRefuseResendByMatnr" parameterType="java.util.HashMap" resultMap="BaseResultMap">
   SELECT
    rr.RESEND_ORDER_NO,rr.MATNR,ex.SHORT_TXT MATNR_TXT,rr.REMAIN_QTY,rr.DISP_DATE,rr.EMP_NO,e.EMP_NAME
    FROM t_mst_refuse_resend  rr
    LEFT JOIN t_md_branch_emp e on rr.EMP_NO = e.EMP_NO
    LEFT JOIN t_md_mara_ex ex on rr.MATNR = ex.MATNR and ex.SALES_ORG= rr.SALES_ORG
    WHERE rr.BRANCH_NO = #{branchNo}
    and rr.MATNR = #{matnr}
  </select>


