<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd"
	   default-lazy-init="true">

	<bean id="scheduledJobDetail1"
		  class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean" >
		<property name="targetObject">
			<ref  bean="piProductService"/>
		</property>
		<property name="targetMethod">
			<value>matHandler</value>
		</property>
	</bean>
	<bean id="scheduledJobDetail2"
		  class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean" >
		<property name="targetObject">
			<ref  bean="piProductService"/>
		</property>
		<property name="targetMethod">
			<value>customerDataHandle</value>
		</property>
	</bean>
	<bean id="scheduledJobDetail3"
		  class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean" >
		<property name="targetObject">
			<ref  bean="piProductService"/>
		</property>
		<property name="targetMethod">
			<value>salesQueryHandler</value>
		</property>
	</bean>
	<bean id="scheduledJobDetail4"
		  class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean" >
		<property name="targetObject">
			<ref  bean="ecBaseService"/>
		</property>
		<property name="targetMethod">
			<value>resendMessage2Ec</value>
		</property>
	</bean>
	<bean id="scheduledJobDetail5"
		  class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean" >
		<property name="targetObject">
			<ref  bean="ladpService"/>
		</property>
		<property name="targetMethod">
			<value>syncSysUsers</value>
		</property>
	</bean>
	 <!-- 调度的配置开始 -->
    <bean id="crontestJobTrigger1" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail">
            <ref bean="scheduledJobDetail1" />
        </property>
        <property name="cronExpression">
			<value>0 59 23 * * ?</value>
		</property>
    </bean>
	<bean id="crontestJobTrigger2" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="scheduledJobDetail2" />
		</property>
		<property name="cronExpression">
			<value>0 59 1 * * ?</value>
		</property>
	</bean>
	<bean id="crontestJobTrigger3" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="scheduledJobDetail3" />
		</property>
		<property name="cronExpression">
			<value>0 55 15 * * ?</value>
		</property>
	</bean>
	<bean id="crontestJobTrigger4" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="scheduledJobDetail4" />
		</property>
		<property name="cronExpression">
			<value>0 15 * * * ?</value>
		</property>
	</bean>
	<bean id="crontestJobTrigger5" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="scheduledJobDetail5" />
		</property>
		<property name="cronExpression">
			<value>0 25 * * * ?</value>
		</property>
	</bean>
    <!-- 调度的配置结束 -->

    <!-- 启动触发器的配置开始 -->
    <bean name="startQuertz1" lazy-init="false" autowire="no" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="crontestJobTrigger1"/>
				<ref bean="crontestJobTrigger2"/>
				<ref bean="crontestJobTrigger3"/>
				<ref bean="crontestJobTrigger4"/>
				<ref bean="crontestJobTrigger5"/>
            </list>
        </property>
    </bean>

</beans>