<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="services.data.MessageMapper">
    <resultMap id="messageMap" type="model.Message">
        <result property="id" column="id" javaType="Long" jdbcType="INTEGER"/>
        <result property="label" column="label" javaType="String" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="all" resultMap="messageMap">
        SELECT id,label FROM message ORDER BY id
    </select>

    <select id="getMessageById" parameterType="Long" resultMap="messageMap">
        SELECT * FROM message WHERE id = #{value}
    </select>
</mapper>